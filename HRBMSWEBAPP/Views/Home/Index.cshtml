<div class="pagetitle">
<h1>Dashboard</h1>
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item">Dashboard</li>
    </ol>
</nav>
</div>


<section class="section">
    <div class="row align-items-top">
        <div class="col-lg-3">

@foreach(var item in Model)
{
    
<div class="card">
    <img src="assets/img/card.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Room_Number)</h5>
        <h6 class="card-title">@Html.DisplayFor(modelItem => item.Floor_Number)</h6>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Category.Room_Name)</p>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Category.Description)</p>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Category.Price)</p>
            <p class="card-text"><a asp-action="Create" asp-controller="Booking" class="btn btn-primary">Book Now!</a></p>
    </div>
</div>

}
</div>
    </div>
</section>




