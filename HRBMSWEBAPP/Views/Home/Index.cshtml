@section scripts {
    <script>
        $(function () {
            $('a[data-room-id]').click(function (e) {
                e.preventDefault();
                var roomId = $(this).data('room-id');
                $("#roomId").val(roomId);
                $("#booking-form").submit();
            });
        });
    </script>
}





