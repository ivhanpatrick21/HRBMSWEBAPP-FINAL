<section class="section" style="margin-top: 2em;">
        <div class="row align-items-top">
            <div class="d-flex flex-row">

                @foreach (var item in Model)
                {
                    <div class="card mx-2" style="width: 20rem; border-radius: 10px;">
                        <img src="~/img/card.png" class="card-img-top" alt="...">
                        <div class="card-body">
                         
                            <div class="card-body bg-white p-2" style="border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                            
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Category.Room_Name)</p>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Category.Description)</p>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Category.Price)</p>
                            <p class="card-text">

                                @if (_signInManager.IsSignedIn(User))
                                {
                                    <a asp-action="CreateRoomBooking" asp-controller="Booking" class="btn btn-primary" asp-route-roomId="@item.Id">Book Now!</a>
                                }
                                else
                                {
                                    <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Book Now!</a>
                                }
                                
                               

                </p>
                            </div>
                        </div>
                    </div>
                }

            </div>


        </div>
    </section>


       

