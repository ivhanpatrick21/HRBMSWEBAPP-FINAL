@model IEnumerable<Room>

@{
    ViewData["Title"] = "Rooms";
}
<div class="card">
    <div class="card-body">
<h1>Rooms</h1>

<table class="table table-hover">
            <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Room_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Floor_Number)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Room_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor_Number)
            </td>
          
  
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>