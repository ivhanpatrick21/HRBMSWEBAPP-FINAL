@model IEnumerable<Room>

@{
    ViewData["Title"] = "GetAllRooms";
}

<h1>GetAllRooms</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <div class="search-form row g-0">
        <div class="form-group col-10 search-pad">
            @Html.TextBox("SearchString", null, new { @class = "form-control", placeholder = "Enter Category Type" })
        </div>
        <div class="form-group col-2">
            <input type="submit" value="Search" class="btn btn-custom btn-block" />
        </div>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                @Html.DisplayFor(modelItem => item.DisplayStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Room_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Price)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
