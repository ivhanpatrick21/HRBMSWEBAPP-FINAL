@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - HRBMSWEBAPP</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/quill/quill.snow.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/quill/quill.bubble.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/remixicon/remixicon.css" rel="stylesheet" asp-append-version="true">
    <link href="~/vendor/simple-datatables/style.css" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="~/HRBMSWEBAPP.styles.css" asp-append-version="true" />

    <!--  Main CSS File -->
    <link href="~/css/stylesheet.css" rel="stylesheet" asp-append-version="true">
</head>
<body>
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                <img src="~/img/logo.png" alt="">
                <span class="d-none d-lg-block">Hotel Room Booking System</span>
            </a>

            @* <i class="bi bi-list toggle-sidebar-btn"></i>*@

        </div>

        <nav class="header-nav ms-auto">

            <ul class="d-flex align-items-center">
                @if (_signInManager.IsSignedIn(User))
                {
                    <li class="nav-item dropdown pe-3">


                        <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                            @*  <img src="assets/img/profile-img.jpg" alt="Profile" class="rounded-circle" />
                        <label asp-for="Users" class="control-label">User Role</label>
                        <select asp-for="Role" class="form-control" asp-items="@(new SelectList(ViewBag.listofrole, "Id", "Name"))"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>*@
                            <span class="d-none d-md-block dropdown-toggle ps-2">@(ViewBag.UserId)</span><!--Edit Name of User-->
                        </a>

                        <a class="dropdown-item d-flex align-items-center" asp-controller="Account" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Sign Out</span>
                        </a>

                        <a class="dropdown-item d-flex align-items-center" asp-controller="Account" asp-action="ChangePassword">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Change Password</span>
                        </a>




                        <!-- End Profile Dropdown Items -->
                    </li>
                }
                else
                {

                    <li class="nav-item">
                        <a style="padding-right:10%" class="nav-link collapsed" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Login</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a style="padding-right:10%" class="nav-link collapsed" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-card-list"></i>
                            <span>Register</span>
                        </a>
                    </li>


                }
                  </ul>

        </nav>

        @if (_signInManager.IsSignedIn(User))
        {
            <aside id="sidebar" class="sidebar">

            <ul class="sidebar-nav" id="sidebar-nav">

                <li class="nav-item">
                    <a class="nav-link " asp-controller="Home" asp-action="Index">
                        <!-- Insert Home page -->
                        <i class="bi bi-grid"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-journal-text"></i><span>Add Forms</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="forms-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                        <li>
                            <a asp-area="" asp-controller="Users" asp-action="Create">
                                <i class="bi bi-circle"></i><span>Add User</span>
                            </a>
                        </li>

                        <li>
                            <a asp-area="" asp-controller="RoomCategory" asp-action="Create">
                                <i class="bi bi-circle"></i><span>Add Category</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Room" asp-action="Create">
                                <i class="bi bi-circle"></i><span>Add Rooms</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Roles" asp-action="Create">
                                <i class="bi bi-circle"></i><span>Add Roles</span>
                            </a>
                        </li>

                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link collapsed" data-bs-target=" #tables-nav" data-bs-toggle="collapse" href="#">
                        <i class="bi bi-bar-chart"></i><span>Tables</span><i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <ul id="tables-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                        <li>
                            <a asp-area="" asp-controller="Users" asp-action="GetAllUsers">
                                <i class="bi bi-circle"></i><span>User</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Booking" asp-action="GetAllBookings">
                                <i class="bi bi-circle"></i><span>Booking List</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="RoomCategory" asp-action="GetAllRoomCategories">
                                <i class="bi bi-circle"></i><span>Room Categories</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Room" asp-action="GetAllRooms">
                                <i class="bi bi-circle"></i><span>Rooms List</span>
                            </a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Roles" asp-action="GetAllRoles">
                                <i class="bi bi-circle"></i><span>Users Roles</span>
                            </a>
                        </li>

                    </ul>
                </li>

            </ul>

        </aside>
        }



    </header>
    @if (_signInManager.IsSignedIn(User))
    {
        <div>
            <main role="main" id="main" class="main">

                @RenderBody()

            </main>
        </div>


        <footer id="footer" class="footer">
            <div class="copyright">
                &copy; Copyright <strong><span>Hotel Room Booking System</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                Designed by Ivhan and Mark
            </div>
        </footer>
    }else {
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="copyright">
            &copy; Copyright <strong><span>Hotel Room Booking System</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by Ivhan and Mark
        </div>
    </footer>
    }
    <script src="~/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/chart.js/chart.umd.js"></script>
    <script src="~/vendor/echarts/echarts.min.js"></script>
    <script src="~/vendor/quill/quill.min.js"></script>
    <script src="~/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/vendor/tinymce/tinymce.min.js"></script>
    <script rc="~/js/site.js" asp-append-version="true"></script>

    <!-- Main JS File -->
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>