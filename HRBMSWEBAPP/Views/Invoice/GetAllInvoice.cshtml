            <td>
                    @Html.DisplayFor(modelItem => item.Booking.CheckIn)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Booking.CheckOut)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Booking.Room.Room_Number)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Room_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booking.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
