@model IEnumerable<Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Invoice">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.User.Full_Name)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Booking.CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking.CheckOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking.Room.Room_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Room_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking.Status)
            </th>
