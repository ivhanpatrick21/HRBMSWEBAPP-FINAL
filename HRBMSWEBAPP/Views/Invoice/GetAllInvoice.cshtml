@model IEnumerable<Invoice>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
<h1>Index</h1>


            <a asp-action="Create" asp-controller="Invoice" class="btn btn-primary">Add Invoice</a>

<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.BookingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Full_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room.Room_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Room_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.User.Full_Name)
            </td>
            
            <td>
                    @Html.DisplayFor(modelItem => item.Room.Room_Number)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Room_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>
