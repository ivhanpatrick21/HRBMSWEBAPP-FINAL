@model IEnumerable<Booking>

@{
    ViewData["Title"] = "GetAllBookings";
}

<div class="pagetitle">
    <h1>Bookings</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">Bookings</li>
        </ol>
    </nav>
</div>

@using (Html.BeginForm())
{
    <div class="search-form row g-0">
        <div class="form-group col-10 search-pad">
            @Html.TextBox("SearchString", null, new { @class = "form-control", placeholder = "Enter Guest Name" })
        </div>
        <div class="form-group col-2">
            <input type="submit" value="Search" class="btn btn-custom btn-block" />
        </div>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Full_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Full_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Id)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Release</a>
            </td>
        </tr>
        
}
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>
