@model IEnumerable<Booking>

@{
    ViewData["Title"] = "Bookings";
}


<div class="pagetitle">
    <h1>Bookings</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">Bookings</li>
        </ol>
    </nav>
</div>
<div class="card">
    <div class="card-body">
        <h1>Bookings</h1>


        <table class="table table-hover">
            <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Room.Room_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room.Floor_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room.Status)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Room.Category.Price)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.User.Full_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.Room_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.Floor_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckIn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckOut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.DisplayStatus)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Category.Price)
                </td>*@
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>